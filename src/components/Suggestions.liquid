<div class="bg-[#FAFAFA] pt-10 mb-4">
  <div class="w-full uppercase pb-8 px-[45px] font-light">
    <h2 class="text-center text-xl">You may be interested in</h2>
  </div>

  <div
    data-variants='{{ suggestionsVariants | json }}'
    x-init="suggestions = JSON.parse($el.dataset.variants)"
    class="px-4">
    <div class="flex overflow-x-auto scroll-smooth snap-x snap-mandatory">
      <template x-for="(suggestion, idx) in suggestions" :key="idx">
        <div class="flex-shrink-0 w-[90%] mr-1 snap-start">
          <div>
            <img
              :src="suggestion.src"
              class="w-full object-cover"
              :alt="`Suggestion ${idx + 1}`" />
            <div class="p-4">
              <h3 class="font-medium text-lg mb-2" x-text="suggestion.title"></h3>
              <p class="text-gray-600 text-sm mb-3" x-text="suggestion.price"></p>
            </div>
          </div>
        </div>
      </template>
    </div>
  </div>
</div>
